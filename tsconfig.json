{
  "include": ["src"],
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "lib",
    "plugins": [
      {
        "name": "typescript-snapshots-plugin",
        "snapshotCallIdentifiers": [
          "toMatchSnapshot",
          "parseSnapshot",
          "parseThrows"
        ]
      }
    ],
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  }
}
